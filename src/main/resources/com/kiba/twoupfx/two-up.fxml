<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="400" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiba.twoupfx.LoginController">
    <top>
        <HBox alignment="BOTTOM_CENTER" prefHeight="50">
            <Text text="Welcome to Adam's Anzac Day Two-Up Adventure!">
                <font>
                    <Font size="25" name="Albertus Extra Bold" />
                </font>
            </Text>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" spacing="10">
                <Text text="Username:" >
                    <font>
                        <Font size="15" />
                    </font>
                </Text>
                <TextField fx:id="username" promptText="Username" >
                    <font>
                        <Font size="15" />
                    </font>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Text text="Password:" >
                    <font>
                        <Font size="15" />
                    </font>
                </Text>
                <PasswordField fx:id="password" promptText="Password" >
                    <font>
                        <Font size="15" />
                    </font>
                </PasswordField>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="login" text="Login" defaultButton="true" onAction="#handleLoginButton">
                    <font>
                        <Font size="15" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="TOP_CENTER" prefHeight="50" spacing="10">
            <Text text="Don't have an account? ->" >
                <font>
                    <Font size="15" />
                </font>
            </Text>
            <Button fx:id="signup" text="Sign up" onAction="#handleSignUpButton">
                <font>
                    <Font size="15" />
                </font>
            </Button>
            <Button fx:id="exit" text="Exit game!" onAction="#handleExitButton" >
                <font>
                    <Font size="15" />
                </font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>